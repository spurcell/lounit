/**
 * Models a unit test.
 */
create is <-> (name, proc) {
    
    passed      = true;
    assertions  = [];
    
    /**
     * Records the result of an assertion in the test.
     *
     * @param {bool} result
     */
    record is <-> (result) {
        
        if result == false {
            passed = false;
        }
        
        assertions <+ result;
    };
    
    // facet to pass into test procedure
    
    procFacet = (
        
        assert: <-> (val) {
            record(val == true);
        },
        
        assertEqual: <-> (a, b) {
            record(a == b);
        }
    );

    // control facet to return to owner
    
    reply (
        
        run: <-> (reporter) {
            
            proc << (procFacet);
            
            reporter.addTest << (name, passed);
        }
    );
};